{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "allowJs": false,
        "jsx": "react",
        "target": "es5",
        "lib": ["dom", "es6"],
        "typeRoots": [
            "node_modules/@types/",
            "./src/client/typings"
        ]
    },
    "exclude": [
    	"node_modules",
        "bower_components"
    ]
}